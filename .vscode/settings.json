{
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.rulers": [120],
  "workbench.colorCustomizations": {
    "editorStickyScroll.background": "#00708D",
    "editorStickyScrollHover.background": "#59A2B5"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit",
    "source.fixAll.biome": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "biome.configurationPath": "./biome.json",
  "files.associations": {
    "*.css": "tailwindcss",
    "*.mdx": "markdown",
    "*.mjs": "javascript"
  },
  "npm.packageManager": "pnpm",
  "tailwindCSS.experimental.configFile": "src/app/globals.css",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/.pnpm-store/**": true
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "stylelint.validate": ["css"],
  "css.validate": false,
  "[css]": {
    "editor.defaultFormatter": "bradlc.vscode-tailwindcss",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "[javascript][typescript][typescriptreact][javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true
  },
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "MD010": {
      "spaces_per_tab": 4
    },
    "MD025": false,
    "MD033": false,
    "MD034": false
  },
  "[jsonc][json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true
  },
  "json.schemaDownload.enable": true,
  "[yaml][dockercompose][github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "yaml.format.enable": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "必ず日本語でコミットメッセージを簡潔に記述してください"
    }
  ],
  "cSpell.words": [
    "Codecov",
    "devcontainer",
    "devcontainers",
    "dockercompose",
    "harborland",
    "Tomoki",
    "tomomon"
  ],
  "todo-tree.general.tags": [
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "REVIEW",
    "OPTIMIZE",
    "CHANGED",
    "NOTE",
    "WARNING"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#000000",
    "background": "#2C7CFF",
    "iconColor": "#24ff41",
    "opacity": 45
  },
  "todo-tree.highlights.customHighlight": {
    "HACK": {
      "icon": "zap"
    },
    "FIXME": {
      "icon": "flame",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    },
    "TODO": {
      "icon": "check-circle"
    },
    "XXX": {
      "icon": "x-circle",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "REVIEW": {
      "icon": "pin"
    },
    "OPTIMIZE": {
      "icon": "rocket",
      "background": "#f8831d",
      "iconColor": "#f8831d"
    },
    "CHANGED": {
      "icon": "issue-reopened"
    },
    "NOTE": {
      "icon": "thumbsup"
    },
    "WARNING": {
      "icon": "alert",
      "background": "#f11e1e",
      "iconColor": "#f11e1e"
    }
  },
  "cSpell.ignorePaths": [".vscode", ".devcontainer/devcontainer.json"],
  "errorLens.excludeBySource": ["cSpell"],
  "tailwindcss-intellisense.trace.server": "messages"
}
